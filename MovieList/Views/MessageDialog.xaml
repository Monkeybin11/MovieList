<local:MessageDialogBase x:Class="MovieList.Views.MessageDialog"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:m="http://materialdesigninxaml.net/winfx/xaml/themes"
                         xmlns:local="clr-namespace:MovieList.Views"
                         mc:Ignorable="d">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock x:Name="TextBlock" Grid.Row="0" Margin="0 8 0 0" />

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0 16 0 0" HorizontalAlignment="Right">
            <Button x:Name="Button" IsDefault="True" Style="{DynamicResource MaterialDesignFlatButton}"
                    Command="{x:Static m:DialogHost.CloseDialogCommand}" />
        </StackPanel>
    </Grid>
</local:MessageDialogBase>
