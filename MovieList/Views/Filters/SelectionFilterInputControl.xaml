<local:SelectionFilterInputControlBase x:Class="MovieList.Views.Filters.SelectionFilterInputControl"
                                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                       xmlns:local="clr-namespace:MovieList.Views.Filters">
    <ComboBox x:Name="InputBox" Style="{StaticResource MaterialDesignFloatingHintComboBox}">
        <ComboBox.ItemTemplate>
            <DataTemplate>
                <TextBlock Text="{Binding}" />
            </DataTemplate>
        </ComboBox.ItemTemplate>
    </ComboBox>
</local:SelectionFilterInputControlBase>
