<local:HomePageControlBase x:Class="MovieList.Views.HomePageControl"
                           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                           xmlns:local="clr-namespace:MovieList.Views"
                           xmlns:resx="clr-namespace:MovieList.Properties"
                           mc:Ignorable="d" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                           HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                           d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TextBlock DockPanel.Dock="Top" Style="{StaticResource MaterialDesignHeadline1TextBlock}"
                   Text="{x:Static resx:Messages.MovieList}" HorizontalAlignment="Center" TextAlignment="Center" />

        <UniformGrid Rows="1" Columns="2" Margin="8">
            <StackPanel>
                <TextBlock Text="{x:Static resx:Messages.RecentlyOpenedFiles}" HorizontalAlignment="Center"
                           Style="{StaticResource MaterialDesignHeadline5TextBlock}" />

                <ItemsControl x:Name="RecentFilesList" HorizontalAlignment="Stretch" Margin="24" />

                <TextBlock x:Name="NoRecentlyOpenedFilesTextBlock" HorizontalAlignment="Center"
                           Text="{x:Static resx:Messages.NoRecentlyOpenedFiles}" Margin="0,16,0,0"
                           Style="{StaticResource MaterialDesignBody1TextBlock}" />

                <Button x:Name="RemoveButton" Style="{StaticResource MaterialDesignRaisedAccentButton}"
                        Content="{x:Static resx:Messages.RemoveFromList}" HorizontalAlignment="Center" Margin="8" />
            </StackPanel>

            <StackPanel HorizontalAlignment="Stretch">
                <Button x:Name="CreateListButton" Style="{StaticResource MaterialDesignRaisedButton}" Width="168" Height="48"
                        Content="{x:Static resx:Messages.CreateList}" HorizontalAlignment="Center" />

                <Button x:Name="OpenListButton" Style="{StaticResource MaterialDesignRaisedButton}" Width="168" Height="48"
                        Content="{x:Static resx:Messages.OpenList}" HorizontalAlignment="Center" Margin="0,24,0,0" />
            </StackPanel>
        </UniformGrid>
    </DockPanel>
</local:HomePageControlBase>
