<local:NewItemControlBase x:Class="MovieList.Views.NewItemControl"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                          xmlns:local="clr-namespace:MovieList.Views"
                          xmlns:l="clr-namespace:MovieList.Localization"
                          mc:Ignorable="d">
    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
        <StackPanel.Resources>
            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                <Setter Property="Height" Value="50" />
                <Setter Property="Margin" Value="32,16" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
            </Style>
        </StackPanel.Resources>

        <Button x:Name="AddNewMovieButton" Content="{l:Translate AddNewMovie, ToUpper=True}" />
        <Button x:Name="AddNewSeriesButton" Content="{l:Translate AddNewSeries, ToUpper=True}" />
    </StackPanel>
</local:NewItemControlBase>
