<UserControl x:Class="MovieList.Views.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:tk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:resx="clr-namespace:MovieList.Properties"
             xmlns:vm="clr-namespace:MovieList.ViewModels" mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:SettingsViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="800" d:DesignWidth="300" Loaded="SettingsControl_Loaded">
    <UserControl.Resources>
        <Style TargetType="{x:Type tk:ColorPicker}">
            <Setter Property="AdvancedButtonHeader" Value="{x:Static resx:Resources.ColorPickerAdvanced}" />
            <Setter Property="AvailableColorsHeader" Value="{x:Static resx:Resources.ColorPickerAvailableColors}" />
            <Setter Property="RecentColorsHeader" Value="{x:Static resx:Resources.ColorPickerRecentColors}" />
            <Setter Property="StandardButtonHeader" Value="{x:Static resx:Resources.ColorPickerStandard}" />
            <Setter Property="StandardColorsHeader" Value="{x:Static resx:Resources.ColorPickerStandardColors}" />
            <Setter Property="DisplayColorAndName" Value="False" />
            <EventSetter Event="SelectedColorChanged" Handler="ColorPicker_SelectedColorChanged" />
        </Style>
    </UserControl.Resources>

    <UserControl.CommandBindings>
        <CommandBinding Command="Save" CanExecute="Save_CanExecute" Executed="Save_Executed" />
        <CommandBinding Command="Stop" CanExecute="Cancel_CanExecute" Executed="Cancel_Executed" />
    </UserControl.CommandBindings>
    
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Text="{x:Static resx:Resources.SettingsTitle}" FontSize="24"
                   TextAlignment="Center" HorizontalAlignment="Stretch" Margin="5" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5" DockPanel.Dock="Bottom">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="2" />
                    <Setter Property="Padding" Value="5,2" />
                    <Setter Property="Width" Value="100" />
                </Style>
            </StackPanel.Resources>
            
            <Button Content="{x:Static resx:Resources.Cancel}" Command="Stop" />
            <Button Content="{x:Static resx:Resources.Save}" Command="Save" />
        </StackPanel>

        <StackPanel Margin="10">
            <Expander Header="{x:Static resx:Resources.Kinds}" IsExpanded="False">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <StackPanel Margin="0,0,2,5" Grid.Column="0">
                            <TextBlock Text="{x:Static resx:Resources.NotWatched}" TextAlignment="Left"
                                       HorizontalAlignment="Stretch" />

                            <tk:ColorPicker SelectedColor="{Binding Path=NotWatchedColor}" HorizontalAlignment="Stretch" />
                        </StackPanel>

                        <StackPanel Margin="2,0,0,5" Grid.Column="1">
                            <TextBlock Text="{x:Static resx:Resources.NotReleased}" TextAlignment="Left"
                                       HorizontalAlignment="Stretch" />

                            <tk:ColorPicker SelectedColor="{Binding Path=NotReleasedColor}" HorizontalAlignment="Stretch" />
                        </StackPanel>
                    </Grid>

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Path=Kinds}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <Separator />

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="20" />
                                            </Grid.ColumnDefinitions>

                                            <TextBox Text="{Binding Path=Name}" Margin="0,5" TextAlignment="Left" Grid.Column="0"
                                                     HorizontalAlignment="Stretch" TextChanged="TextBox_TextChanged" />

                                            <Button Grid.Column="1" Margin="2,0,0,0" Content="{x:Static resx:Resources.RemoveIcon}"
                                                    HorizontalAlignment="Stretch" Height="18" VerticalContentAlignment="Center"
                                                    Padding="0" ToolTip="{x:Static resx:Resources.Remove}" Click="RemoveKind_Click"
                                                    Tag="{Binding}" />
                                        </Grid>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Margin="0,0,2,5" Grid.Column="0">
                                                <TextBlock Text="{x:Static resx:Resources.Movie}" TextAlignment="Left"
                                                           HorizontalAlignment="Stretch" />

                                                <tk:ColorPicker SelectedColor="{Binding Path=ColorForMovie}"
                                                                HorizontalAlignment="Stretch" />
                                            </StackPanel>

                                            <StackPanel Margin="2,0,0,5" Grid.Column="1">
                                                <TextBlock Text="{x:Static resx:Resources.Series}" TextAlignment="Left"
                                                           HorizontalAlignment="Stretch" />

                                                <tk:ColorPicker SelectedColor="{Binding Path=ColorForSeries}"
                                                                HorizontalAlignment="Stretch" />
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <Button Width="50" Margin="0,5,0,0" Padding="0" Content="{x:Static resx:Resources.AddIcon}"
                            Click="AddKind_Click" VerticalContentAlignment="Center" FontSize="20"
                            ToolTip="{x:Static resx:Resources.Add}" />
                </StackPanel>
            </Expander>
        </StackPanel>
    </DockPanel>
</UserControl>
