<UserControl x:Class="MovieList.Views.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:tk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:resx="clr-namespace:MovieList.Properties"
             xmlns:vm="clr-namespace:MovieList.ViewModels" mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:SettingsViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="800" d:DesignWidth="300" Loaded="SettingsControl_Loaded">
    <UserControl.Resources>
        <Style TargetType="{x:Type tk:ColorPicker}">
            <Setter Property="AdvancedButtonHeader" Value="{x:Static resx:Messages.ColorPickerAdvanced}" />
            <Setter Property="AvailableColorsHeader" Value="{x:Static resx:Messages.ColorPickerAvailableColors}" />
            <Setter Property="RecentColorsHeader" Value="{x:Static resx:Messages.ColorPickerRecentColors}" />
            <Setter Property="StandardButtonHeader" Value="{x:Static resx:Messages.ColorPickerStandard}" />
            <Setter Property="StandardColorsHeader" Value="{x:Static resx:Messages.ColorPickerStandardColors}" />
            <Setter Property="DisplayColorAndName" Value="False" />
            <EventSetter Event="SelectedColorChanged" Handler="ColorPicker_SelectedColorChanged" />
        </Style>

        <Style TargetType="{x:Type Expander}">
            <Setter Property="IsExpanded" Value="False" />
            <Setter Property="Margin" Value="0,5,0,0" />
            <Setter Property="Padding" Value="0,0,0,5" />
        </Style>
    </UserControl.Resources>

    <UserControl.CommandBindings>
        <CommandBinding Command="Save" CanExecute="Save_CanExecute" Executed="Save_Executed" />
        <CommandBinding Command="Stop" CanExecute="Cancel_CanExecute" Executed="Cancel_Executed" />
    </UserControl.CommandBindings>
    
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Text="{x:Static resx:Messages.SettingsTitle}" FontSize="24"
                   TextAlignment="Center" HorizontalAlignment="Stretch" Margin="5" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5" DockPanel.Dock="Bottom">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="2" />
                    <Setter Property="Padding" Value="5,2" />
                    <Setter Property="Width" Value="100" />
                </Style>
            </StackPanel.Resources>
            
            <Button Content="{x:Static resx:Messages.Cancel}" Command="Stop" />
            <Button Content="{x:Static resx:Messages.Save}" Command="Save" />
        </StackPanel>

        <StackPanel Margin="10">
            <Expander Header="{x:Static resx:Messages.Kinds}" Margin="0">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <StackPanel Margin="0,0,2,5" Grid.Column="0">
                            <TextBlock Text="{x:Static resx:Messages.NotWatched}" TextAlignment="Left"
                                       HorizontalAlignment="Stretch" />

                            <tk:ColorPicker SelectedColor="{Binding Path=NotWatchedColor}" HorizontalAlignment="Stretch" />
                        </StackPanel>

                        <StackPanel Margin="2,0,0,5" Grid.Column="1">
                            <TextBlock Text="{x:Static resx:Messages.NotReleased}" TextAlignment="Left"
                                       HorizontalAlignment="Stretch" />

                            <tk:ColorPicker SelectedColor="{Binding Path=NotReleasedColor}" HorizontalAlignment="Stretch" />
                        </StackPanel>
                    </Grid>

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Path=Kinds}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <Separator />

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="20" />
                                            </Grid.ColumnDefinitions>

                                            <TextBox Text="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                                                     Margin="0,5" TextAlignment="Left" Grid.Column="0" HorizontalAlignment="Stretch"
                                                     TextChanged="TextBox_TextChanged" />

                                            <Button Grid.Column="1" Margin="2,0,0,0" Content="{x:Static resx:Messages.RemoveIcon}"
                                                    HorizontalAlignment="Stretch" Height="18" VerticalContentAlignment="Center"
                                                    Padding="0" ToolTip="{x:Static resx:Messages.Remove}" Click="RemoveKind_Click"
                                                    Tag="{Binding}" />
                                        </Grid>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Margin="0,0,2,5" Grid.Column="0">
                                                <TextBlock Text="{x:Static resx:Messages.Movie}" TextAlignment="Left"
                                                           HorizontalAlignment="Stretch" />

                                                <tk:ColorPicker SelectedColor="{Binding Path=ColorForMovie}"
                                                                HorizontalAlignment="Stretch" />
                                            </StackPanel>

                                            <StackPanel Margin="2,0,0,5" Grid.Column="1">
                                                <TextBlock Text="{x:Static resx:Messages.Series}" TextAlignment="Left"
                                                           HorizontalAlignment="Stretch" />

                                                <tk:ColorPicker SelectedColor="{Binding Path=ColorForSeries}"
                                                                HorizontalAlignment="Stretch" />
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <Button Width="50" Margin="0,5,0,0" Padding="0" Content="{x:Static resx:Messages.AddIcon}"
                            Click="AddKind_Click" VerticalContentAlignment="Center" FontSize="20"
                            ToolTip="{x:Static resx:Messages.Add}" />
                </StackPanel>
            </Expander>

            <Expander Header="{x:Static resx:Messages.OtherSettings}">
                <StackPanel>
                    <StackPanel Margin="0,0,2,5" Grid.Column="0">
                        <TextBlock Text="{x:Static resx:Messages.DefaultSeasonTitle}" TextAlignment="Left"
                                   HorizontalAlignment="Stretch" />

                        <TextBox Text="{Binding Path=DefaultSeasonTitle, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                                 HorizontalAlignment="Stretch" TextChanged="TextBox_TextChanged" />
                    </StackPanel>
                    
                    <StackPanel Margin="0,0,2,5" Grid.Column="0">
                        <TextBlock Text="{x:Static resx:Messages.DefaultSeasonOriginalTitle}" TextAlignment="Left"
                                   HorizontalAlignment="Stretch" />

                        <TextBox Text="{Binding Path=DefaultSeasonOriginalTitle, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                                 HorizontalAlignment="Stretch" TextChanged="TextBox_TextChanged" />
                    </StackPanel>
                </StackPanel>
            </Expander>

            <Expander Header="{x:Static resx:Messages.AdvancedSettings}">
                <StackPanel>
                    <StackPanel>
                        <TextBlock Text="{x:Static resx:Messages.DatabasePath}" HorizontalAlignment="Stretch" TextAlignment="Left" />
                        <TextBox Text="{Binding Path=DatabasePath, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                                 HorizontalAlignment="Stretch" TextChanged="TextBox_TextChanged" />
                    </StackPanel>
                    
                    <Button Margin="0,5,0,0" Padding="5,2" Content="{x:Static resx:Messages.ViewLog}" Click="ViewLog_Click" />
                </StackPanel>
            </Expander>
        </StackPanel>
    </DockPanel>
</UserControl>
