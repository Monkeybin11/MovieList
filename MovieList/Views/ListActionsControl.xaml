<local:ListActionsControlBase x:Class="MovieList.Views.ListActionsControl"
                              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                              xmlns:rx="http://reactiveui.net"
                              xmlns:local="clr-namespace:MovieList.Views"
                              xmlns:l="clr-namespace:MovieList.Localization">
    <Grid HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                    <Setter Property="Height" Value="50" />
                    <Setter Property="Margin" Value="32 16" />
                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                </Style>
            </StackPanel.Resources>

            <Button x:Name="AddNewMovieButton" Content="{l:Translate AddNewMovie, ToUpper=True}" />
            <Button x:Name="AddNewSeriesButton" Content="{l:Translate AddNewSeries, ToUpper=True}" />
        </StackPanel>

        <rx:ViewModelViewHost x:Name="FilterViewHost" Grid.Row="1" />
    </Grid>
</local:ListActionsControlBase>
