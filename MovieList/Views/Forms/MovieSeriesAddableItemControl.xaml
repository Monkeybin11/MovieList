<local:MovieSeriesAddableItemControlBase x:Class="MovieList.Views.Forms.MovieSeriesAddableItemControl"
                                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                         xmlns:local="clr-namespace:MovieList.Views.Forms"
                                         mc:Ignorable="d">
    <StackPanel>
        <TextBlock x:Name="TitleTextBlock" TextWrapping="Wrap" Style="{StaticResource MaterialDesignBody2TextBlock}" />

        <WrapPanel>
            <TextBlock x:Name="OriginalTitleTextBlock" TextWrapping="Wrap"
                       Style="{StaticResource MaterialDesignOverlineTextBlock}" />

            <TextBlock x:Name="YearTextBlock" TextWrapping="Wrap"
                       Style="{StaticResource MaterialDesignOverlineTextBlock}" />

            <TextBlock x:Name="TagTextBlock" TextWrapping="Wrap"
                       Style="{StaticResource MaterialDesignOverlineTextBlock}" />
        </WrapPanel>
    </StackPanel>
</local:MovieSeriesAddableItemControlBase>
