<local:TitleFormControlBase x:Class="MovieList.Views.Forms.TitleFormControl"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:m="http://materialdesigninxaml.net/winfx/xaml/themes"
                            xmlns:local="clr-namespace:MovieList.Views.Forms"
                            mc:Ignorable="d">
    <DockPanel>
        <Button x:Name="DeleteButton" DockPanel.Dock="Right" Style="{StaticResource MaterialDesignIconButton}"
                VerticalAlignment="Center" Padding="0" Width="15" Height="15" Margin="10,0,0,0">
            <m:PackIcon Kind="WindowClose" Margin="0" Width="15" Height="15" />
        </Button>

        <TextBox x:Name="NameTextBox" Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"
                 TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
    </DockPanel>
</local:TitleFormControlBase>
