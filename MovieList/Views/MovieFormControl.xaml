<UserControl x:Class="MovieList.Views.MovieFormControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MovieList.Views"
             xmlns:resx="clr-namespace:MovieList.Properties"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:MovieList.ViewModels" mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:MovieFormViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="800" d:DesignWidth="300">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
    </UserControl.Resources>
    
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <DockPanel Margin="2,2,2,0">
                <Button DockPanel.Dock="Right" Background="Transparent" BorderThickness="0" Width="20" Height="20" Padding="0"
                        Command="{Binding SidePanel.Close}" FontSize="16" Content="{x:Static resx:Messages.RemoveIcon}"
                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                        HorizontalAlignment="Right" VerticalAlignment="Top" />
            </DockPanel>
            
            <TextBlock Text="{Binding FormTitle}" FontSize="24" Margin="5,0,5,5" HorizontalAlignment="Stretch" TextWrapping="Wrap" />
        </StackPanel>

        <Border BorderBrush="LightGray" BorderThickness="0,1,0,0" HorizontalAlignment="Stretch" DockPanel.Dock="Bottom">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5"
                        Visibility="{Binding CanSaveOrCancelChanges, Converter={StaticResource BoolToVisibility}}">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Margin" Value="2" />
                        <Setter Property="Padding" Value="5,2" />
                        <Setter Property="Width" Value="100" />
                    </Style>
                </StackPanel.Resources>

                <Separator />
                <Button Content="{x:Static resx:Messages.Cancel}" Command="{Binding Cancel}" />
                <Button Content="{x:Static resx:Messages.Save}" Command="{Binding Save}" />
            </StackPanel>
        </Border>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel DataContext="{Binding Movie}" Margin="10">
                <Image Source="{Binding Poster}" />
                <TextBlock Margin="5" HorizontalAlignment="Center">
                    <Hyperlink NavigateUri="{Binding ImdbLink}" local:Properties.IsExternal="True">
                        <Hyperlink.Inlines>
                            <Run Text="{Binding ImdbLink}" />
                        </Hyperlink.Inlines>
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
