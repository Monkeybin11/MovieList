<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <UseWPF>true</UseWPF>
    <LangVersion>8.0</LangVersion>
    <NullableContextOptions>enable</NullableContextOptions>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <ApplicationIcon>icon.ico</ApplicationIcon>
  </PropertyGroup>

  <PropertyGroup>
    <NoWarn>1701;1702;8618;NU1701</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Themes\Converters.xaml" />
    <None Remove="Themes\Styles.xaml" />
    <None Remove="Views\AddNewControl.xaml" />
    <None Remove="Views\MainWindow.xaml" />
    <None Remove="Views\MovieFormControl.xaml" />
    <None Remove="Views\MovieListControl.xaml" />
    <None Remove="Views\MovieSeriesFormControl.xaml" />
    <None Remove="Views\SeasonFormControl.xaml" />
    <None Remove="Views\SeriesFormControl.xaml" />
    <None Remove="Views\SettingsControl.xaml" />
    <None Remove="Views\SidePanelControl.xaml" />
    <None Remove="Views\SpecialEpisodeFormControl.xaml" />
    <None Remove="Views\TitleListControl.xaml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="HandyControl" Version="1.5.5.19" />
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="3.0.0-preview5.19227.1" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="3.0.0-preview6.19304.6" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="3.0.0-preview6.19304.6" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="3.0.0-preview6.19304.6" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="3.0.0-preview6.19304.6" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="3.0.0-preview6.19304.6" />
    <PackageReference Include="Microsoft.Extensions.Logging.Configuration" Version="3.0.0-preview6.19304.6" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="3.0.0-preview6.19304.6" />
    <PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.0.1" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
    <PackageReference Include="NReco.Logging.File" Version="1.0.4" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MovieList.Data\MovieList.Data.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Messages.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Messages.resx</DependentUpon>
    </Compile>
    <Compile Update="Views\AddNewControl.xaml.cs" />
    <Compile Update="Views\MainWindow.xaml.cs" />
    <Compile Update="Views\MovieFormControl.xaml.cs" />
    <Compile Update="Views\MovieListControl.xaml.cs" />
    <Compile Update="Views\MovieSeriesFormControl.xaml.cs" />
    <Compile Update="Views\SeriesFormControl.xaml.cs" />
    <Compile Update="Views\SettingsControl.xaml.cs" />
    <Compile Update="Views\SidePanelControl.xaml.cs" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Messages.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
      <LastGenOutput>Messages.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <Page Update="Views\AddNewControl.xaml">
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Views\MainWindow.xaml">
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Views\MovieFormControl.xaml">
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Views\MovieListControl.xaml">
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Views\MovieSeriesFormControl.xaml">
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Views\SeriesFormControl.xaml">
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Views\SettingsControl.xaml">
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Views\SidePanelControl.xaml">
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>

</Project>
