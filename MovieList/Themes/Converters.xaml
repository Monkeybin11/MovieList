<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:conv="clr-namespace:MovieList.Converters">
    <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
    <conv:BooleanToVisibilityHiddenConverter x:Key="BoolToVisibilityHidden" />
    <conv:InverseBoolConverter x:Key="InverseBool" />
    <conv:CanSelectIfWatchedConverter x:Key="CanSelectIfWatched" />
    <conv:CanSelectIfReleasedConverter x:Key="CanSelectIfReleased" />
    <conv:CanSelectIfMiniseriesConverter x:Key="CanSelectIfMiniseries" />
    <conv:SeriesStatusConverter x:Key="SeriesStatus" />
    <conv:MonthNameConverter x:Key="MonthName" />
    <conv:ValueConverterGroup x:Key="InverseBoolToVisibility">
        <conv:InverseBoolConverter />
        <BooleanToVisibilityConverter />
    </conv:ValueConverterGroup>
</ResourceDictionary>
